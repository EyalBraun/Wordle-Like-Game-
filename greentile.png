body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background: #e8f5e9;
}

.container {
    max-width: 750px;
    margin: 40px auto;
    padding: 20px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
}

h1 {
    text-align: center;
    margin-bottom: 10px;
}

p {
    font-size: 17px;
    line-height: 1.5;
}

.section {
    margin-top: 35px;
}

img {
    width: 100%;
    border-radius: 8px;
    margin-top: 12px;
}

.hover-box {
    background: #eee;
    padding: 14px;
    border-radius: 10px;
    margin-top: 20px;
    transition: 0.25s;
    border-left: 5px solid transparent;
    cursor: pointer;
}
