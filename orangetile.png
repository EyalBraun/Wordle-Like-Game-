body {
    font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #e8f5e9;
    color: #ffffff;
    margin: 40px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
}

h1 {
    color: #538d4e;
    font-weight: 700;
    font-size: 3rem;
    margin-bottom: 15px;
    letter-spacing: 0.1em;
    text-shadow: 0 0 6px #538d4e;
}

.info {
    max-width: 600px;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #3b4a63;
    text-align: center;
    margin-bottom: 30px;
    user-select: none;
}

#word {
    font-size: 5rem;
    font-weight: 900;
    color: #ffffff;
    background-color: #538d4e;
    padding: 20px 40px;
    border-radius: 12px;
    letter-spacing: 0.25em;
    min-width: 300px;
    text-align: center;
    user-select: none;
    box-shadow: 0 0 10px #538d4eaa;
    margin-bottom: 30px;
    text-transform: uppercase;
}

button {
    background-color: #b59f3b;
    color: #121213;
    border: none;
    padding: 14px 36px;
    font-size: 1.25rem;
    font-weight: 700;
    border-radius: 8px;
    cursor: pointer;
    box-shadow: 0 4px 8px #b59f3baa;
    transition: background-color 0.3s ease;
    user-select: none;
}

    button:hover {
        background-color: #d7c34f;
        box-shadow: 0 6px 12px #d7c34faa;
    }
